{
  "expo": {
    "name": "Shiftly",
    "slug": "shiftly",
    "version": "1.0.6",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kesmek.shiftly"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#111113"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.kesmek.shiftly"
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-sqlite",
        {
          "useLibSQL": false
        }
      ],
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#111113",
          "image": "./assets/images/splash.png",
          "imageWidth": 200,
          "dark": {
            "image": "./assets/images/splash.png",
            "backgroundColor": "#111113"
          },
          "resizeMode": "contain"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
